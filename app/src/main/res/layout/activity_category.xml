<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >



        <TextView
            android:id="@+id/scoorebbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score Board"
            android:gravity="right"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#8B0000"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#030930"
        android:layout_margin="5dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:textColor="#87cefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, what level would you like to play today?"
                android:padding="15dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/bassicard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#f0a630"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Basic"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Teach your children by playing with them. The questions in this category will open your children to simple and amazing facts from the bible."
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cadualcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#317a46"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Catechism"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This level is great for teaching you about the Catholic Doctrine.
The catechism of the Catholic Church is based on the canonical scripture and sacred traditions as interpreted by the magisterium of the Catholic Church.
"
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/mastercard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#1dacdb"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Master"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What to test your knowledge in a higher level?........"
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/legendcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#B03060"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Legend"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How many times have you gotten to be among the top 10 players on the master level? if you have successfully gained that position repeatedly, then this level is for you. Play big, learn big!"
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>



        </LinearLayout>



    </ScrollView>


</LinearLayout>