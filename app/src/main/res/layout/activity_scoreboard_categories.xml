<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#696969"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreboardCategoriesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="15dp"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/bassicards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#f0a630"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Basic"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Click to see how well you did on your previous test.  Keep playing your knowledge of the Bible is improving."
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cadualcards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#317a46"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Catechism"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How well did you do with the Catholic Doctrine, are you getting ahead yet? Click to see your new score."
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/mastercards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#1dacdb"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Master"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Only the real masters play here! Click to find if youâ€™re a real master."
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/legendcards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:background="#B03060"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Legend"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:fontFamily="sans-serif-condensed-light"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Can you stand out in your scores and knowledge of the sacred scriptures? Do you think you can measure up? Click here to find out."
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>



        </LinearLayout>



    </ScrollView>

</LinearLayout>