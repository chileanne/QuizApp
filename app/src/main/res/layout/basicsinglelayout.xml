<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:padding="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i love is food and dying"
            android:id="@+id/basicquestion"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="9dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basicanswerA">

            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A :"/>


            <TextView
                android:textColor="#000"
                android:id="@+id/bbasicanswerA"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is answer"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="9dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basicanswerB">

            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B :"/>


            <TextView
                android:textColor="#000"
                android:id="@+id/bbasicanswerB"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is answer"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="9dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basicanswerC">

            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C :"/>


            <TextView
                android:textColor="#000"
                android:id="@+id/bbasicanswerC"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is answer"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="9dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basicanswerD">

            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D :"/>


            <TextView
                android:textColor="#000"
                android:id="@+id/bbasicanswerD"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is answer"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
